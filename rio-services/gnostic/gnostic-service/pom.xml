<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.rioproject</groupId>
        <artifactId>gnostic</artifactId>
        <version>5.0-M4-S5</version>
    </parent>

    <groupId>org.rioproject.gnostic</groupId>
    <artifactId>gnostic-service</artifactId>
    <name>Module :: Gnostic Service Implementation</name>

    <properties>
        <drools.version>5.4.0.Final</drools.version>
    </properties>

    <dependencies>

        <!-- Gnostic dependencies -->
        <dependency>
            <groupId>org.rioproject</groupId>
            <artifactId>rio-lib</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>org.rioproject.cybernode</groupId>
            <artifactId>cybernode-api</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>org.rioproject.monitor</groupId>
            <artifactId>monitor-api</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>org.rioproject.gnostic</groupId>
            <artifactId>gnostic-api</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>

        <!-- Drools dependencies -->
        <dependency>
            <groupId>org.drools</groupId>
            <artifactId>knowledge-api</artifactId>
            <version>${drools.version}</version>
        </dependency>

        <dependency>
            <groupId>org.drools</groupId>
            <artifactId>drools-templates</artifactId>
            <version>${drools.version}</version>
        </dependency>

        <dependency>
            <groupId>org.codehaus.janino</groupId>
            <artifactId>janino</artifactId>
            <version>2.5.16</version>
        </dependency>

        <!-- Test dependencies -->
        <dependency>
            <groupId>org.rioproject</groupId>
            <artifactId>rio-test</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
            <scope>test</scope>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <excludes>
                        <exclude>**/*IT*.java</exclude>
                    </excludes>
                    <includes>
                        <include>**/SLAWatchesRulesTest.java</include>
                    </includes>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>run-integration-test</id>
            <activation>
                <file>
                    <exists>${basedir}/../../../distribution/target/rio.dist</exists>
                </file>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-failsafe-plugin</artifactId>
                        <configuration>
                            <forkMode>always</forkMode>
                            <systemProperties>
                                <property>
                                    <name>java.security.policy</name>
                                    <value>${basedir}/../../../distribution/target/rio-${rio.version}/policy/policy.all</value>
                                </property>
                                <property>
                                    <name>RIO_HOME</name>
                                    <value>${basedir}/../../../distribution/target/rio-${project.version}</value>
                                </property>
                                <property>
                                    <name>opstring</name>
                                    <value>../src/main/opstring/gnostic.groovy</value>
                                </property>

                                <property>
                                    <name>org.rioproject.test.manager.config</name>
                                    <value>${basedir}/src/test/conf/manager-config.groovy</value>
                                </property>
                            </systemProperties>
                        </configuration>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>integration-test</goal>
                                    <goal>verify</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
